<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<% if (usuarioLogueado) { %>
		<%- include('./partials/headerLogueado', {usuarioLogueado}) %>
	 <% } else { %>
	  <%- include('./partials/header') %>
	<% } %>
		

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> </h2>
				<form action="/product/product-add" method="post" class="formulario-registro">
					<div>
						<label for="nombreProducto" class="product-label">Nombre del producto:</label>
						<input type="text" name="nombreProducto" id="nombreProducto" class="form-input" required>
					</div>
					<div>
						<label for="descripcion" class="product-label">Descripcion del producto:</label>
						<input type="text" name="descripcion" id="descripcion" class="form-input" required>
					</div>
					<div>
						<label for="imagen" class="product-label">URL de imagen</label>
						<input type="text" name="image" id="image" class="productos_img" required>
					</div>
					<button type="submit" class="form-button">Agregar producto</button>
				</form>



	<%- include('./partials/footer') %>

</body>

</html>