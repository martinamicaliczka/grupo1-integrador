<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<%- include('./partials/header') %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title-register">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="col-12"> 
				<form action="/users/login" method="get" class="formulario-registro" >
					<div class="div_formulario">
						<label for="email" class="form-label register-label">Email:</label>
						<input type="email" name="email" id="email" class="form-input" required>
					</div>
					<div class="div_formulario">
						<label for="usuario" class="form-label">Usuario:</label>
						<input id="usuario" type="text" name="usuario" class="form-input" required>
					</div>
					<div class="div_formulario">
						<label for="contrasenia" class="form-label">Contrase√±a:</label>
						<input type="password" name="contrasenia" id="contrasenia" class="form-input" required>
					</div>
					<div class="div_formulario">
						<label for="fecha"  class="form-label">Fecha de nacimiento:</label>
						<input type="date" name="fecha" id="fecha" class="form-input" required>
					</div>
					<div class="div_formulario">
						<label for="dni" class="form-label">Numero de documento:</label>
						<input type="number" name="dni" id="dni" class="form-input" required>
					</div>
					<div class="div_formulario">
						<label for="foto-perfil" class="form-label">Foto de perfil:</label>
						<input type="text" name="foto-perfil" id="foto-perfil" class="form-input" required>
					</div>
					<div class="div_formulario">
						<button type="submit" class="form-button">Enviar</button>
					</div>
				</form>
			
		</div>
	<%- include('./partials/footer') %>

</body>

</html>