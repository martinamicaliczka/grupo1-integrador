<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/ProCaseLogo.png" />
	
	<title> Mercado Liebre Argentina</title>
		<!-- Font Awesome Stylesheet -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css"> 
		<!-- Bootstrap Grid Stylesheet -->
		<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
		<!-- Own Stylesheet -->
		<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
		<%- include('./partials/header') %>
	 
	<!-- Banner -->
	<div class="banner">
		<img src="/images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < productos.length; i++) { 
				let producto = productos[i];
				let descripcion = producto.descripcion;
				let descripcionAcortada = "";
				for (let j = 0; j < 50 && j < descripcion.length; j++) {
				  descripcionAcortada += descripcion[j];
				}
				descripcionAcortada += "...";
			  %>
				<div class="col-12 col-sm-6 col-lg-3">
				  <section class="product-box">
					<a href="/product/<%= producto.id %>">
					  <figure class="product-box_image">
						<img src="<%= producto.imagenProducto %>" alt="<%= producto.nombre %>">
					  </figure>
					  <article class="product-box_data">
						<h2><%= producto.nombre %></h2>
						<p><%= descripcionAcortada %></p>
		  
						<% let coments = 0; %>
						<% for (let j = 0; j < comentarios.length; j++) { %>
						  <% if (comentarios[j].id_producto == producto.id) { %>
							<% coments += 1; %>
						  <% } %>
						<% } %>
						<p>Comentarios: <%= coments %></p>
					  </article>
					</a>
				  </section>
				</div>
			  <% } %>
		</div>
	</div>


	<%- include('./partials/footer') %>

</body>	
</html>