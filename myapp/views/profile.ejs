<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/ProCaseLogo.png" />
	
	<title> Mercado Liebre Argentina</title>
			<!-- Font Awesome Stylesheet -->
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css"> 
			<!-- Bootstrap Grid Stylesheet -->
			<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
			<!-- Own Stylesheet -->
			<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
	<%- include('./partials/headerLogueado', {usuarioLogeado}) %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= foto %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuarioLogeado %>
						<a href="/users/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<p class="email-usuario"><%= email %></p>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<section class="container products-wrapper">
		<div class="row">
			<% for (let i = 0; i < productos.length; i++) { 
				let producto = productos[i];
				let descripcion = producto.descripcion;
				let descripcionAcortada = "";
				for (let j = 0; j < 50 && j < descripcion.length; j++) {
				  descripcionAcortada += descripcion[j];
				}
				descripcionAcortada += "...";
			  %>
				<div class="col-12 col-sm-6 col-lg-3">
				  <section class="product-box">
					<a href="/product/<%= producto.id %>">
					  <figure class="product-box_image">
						<img src="<%= producto.imagenProducto %>" alt="<%= producto.nombre %>">
					  </figure>
					  <article class="product-box_data">
						<h2><%= producto.nombre %></h2>
						<p><%= descripcionAcortada %></p>
		  
						<% let coments = 0; %>
						<% for (let j = 0; j < comentarios.length; j++) { %>
						  <% if (comentarios[j].id_producto == producto.id) { %>
							<% coments += 1; %>
						  <% } %>
						<% } %>
						<p>Comentarios: <%= coments %></p>
					  </article>
					</a>
				  </section>
				</div>
			  <% } %>
		</div>
	  </section>
	</div>
		</div>
	</div>


	<%- include('./partials/footer') %>

</body>	
</html>